generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}

model Service {
  id           String   @id @default(auto()) @map("_id") @db.ObjectId
  name         String
  description  String
  imageUrl     String?
  createdAt    DateTime @default(now()) @map("createdAt")
  updatedAt    DateTime @default(now()) @updatedAt @map("updatedAt")
  slug         String   @unique
  categoryName String
}
